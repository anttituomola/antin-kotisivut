---
interface Props {
  href?: string;
  type?: "button" | "submit";
  class?: string;
}

const { 
  href, 
  type = "button",
  class: className = "" 
} = Astro.props;

const baseStyles = "px-20 py-6 text-lg font-semibold text-text-primary bg-surface border-2 border-primary rounded-xl hover:bg-primary hover:border-primary-hover transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background";
---

{
  href ? (
    <a 
      href={href}
      class={`inline-block ${baseStyles} ${className}`}
    >
      <slot />
    </a>
  ) : (
    <button 
      type={type}
      class={`${baseStyles} ${className}`}
    >
      <slot />
    </button>
  )
}